<UserControl x:Class="Client.Utils.UIHelper.RoadLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client.Utils.UIHelper"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="40">
    <Grid >
        <Ellipse HorizontalAlignment="Left" Height="40 " Fill="White" Width="40" Stroke="#FFFF4B4B" StrokeThickness="5" VerticalAlignment="Top" />
        <Label Name="Index" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" FontWeight="Bold" Content="1"/>
    </Grid>
</UserControl>
